{
  "name": "screen-ocr",
  "version": "1.0.0",
  "description": "Cross-Platform Screen OCR Application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:linux": "tsc && vite build && electron-builder --linux",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "ocr",
    "screen-capture",
    "tesseract"
  ],
  "author": "Aras",
  "license": "MIT",
  "build": {
    "appId": "com.aras.screen-ocr",
    "productName": "Screen OCR",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/index.html",
      "dist/assets/**/*",
      "dist/*.png",
      "!dist/linux-unpacked",
      "!dist/*.AppImage",
      "!dist/*.deb",
      "!dist/*.snap"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "executableName": "screen-ocr",
      "icon": "build/icons",
      "category": "Utility",
      "maintainer": "Aras",
      "synopsis": "Screen OCR - Capture and extract text from screen",
      "description": "A powerful screen OCR application that captures screen regions and extracts text using Tesseract OCR. Supports multiple languages, table extraction, handwriting recognition, and QR/barcode reading.",
      "desktop": {
        "Name": "Screen OCR",
        "Comment": "Capture and extract text from screen",
        "Categories": "Utility;Graphics;Scanning;OCR;",
        "Keywords": "ocr;screen;capture;text;tesseract;",
        "StartupWMClass": "screen-ocr",
        "StartupNotify": "true"
      }
    },
    "extraResources": [
      {
        "from": "public/tray-icon.png",
        "to": "tray-icon.png"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.24",
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "dependencies": {
    "i18next": "^25.8.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.4",
    "sharp": "^0.33.2",
    "tesseract.js": "^5.0.5"
  }
}